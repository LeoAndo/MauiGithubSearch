<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGithubSearch.UI.Detail.DetailScreen"
             Title="DetailScreen">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Label
            x:Name="lblOwnerName" />
            <Label
            x:Name="lblRepoName" />
            <Label
            x:Name="lblApiResult" />
            <Button x:Name="BtnRefresh" Clicked="BtnRefresh_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
