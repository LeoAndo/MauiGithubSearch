<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGithubSearch.UI.Search.SearchScreen"
             Title="SearchScreen">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Github Search App"
                FontSize="32"
                HorizontalOptions="Center" />
            <Button x:Name="NextBtn" Text="Go To Detail" Clicked="NextBtn_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
